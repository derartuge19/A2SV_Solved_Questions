from collections import Counter

class Solution(object):
    def canConstruct(self, ransomNote, magazine):
        """
        :type ransomNote: str
        :type magazine: str
        :rtype: bool
        """
        mag_counts = Counter(magazine)
        
        for char in ransomNote:
            if mag_counts[char] <= 0:
                return False
            mag_counts[char] -= 1
            
        return True
