class Solution(object):
    def maxCoins(self, piles):
        """
        :type piles: List[int]
        :rtype: int
        """
        piles.sort()
        
        n = len(piles) // 3
        total_coins = 0
        
        for i in range(len(piles) - 2, n - 1, -2):
            total_coins += piles[i]
            
        return total_coins
