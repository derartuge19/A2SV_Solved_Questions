from collections import Counter

class Solution(object):
    def countCharacters(self, words, chars):
        """
        :type words: List[str]
        :type chars: str
        :rtype: int
        """

        count1 = Counter(chars)

        length = 0

        for word in words:
            count2 = Counter(word)

            if all(count2[char] <= count1[char] for char in count2):
                length += len(word)

        return length         
        
