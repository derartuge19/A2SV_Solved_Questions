class Solution(object):
    def countNegatives(self, grid):
        """
        :type grid: List[List[int]]
        :rtype: int
        """
        rows = len(grid)
        cols = len(grid[0])
        
        count = 0
        r = rows - 1
        c = 0
        
        while r >= 0 and c < cols:
            if grid[r][c] < 0:
                count += (cols - c)
                r -= 1
            else:
                c += 1
                
        return count
